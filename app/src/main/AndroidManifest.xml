<?xml version="1.0" encoding="utf-8"?>
<manifest package="e.ar_g.taskmanager"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <application
    android:name=".App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="Наше приложение"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".features.main.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name=".features.newtask.NewTaskActivity"></activity>
    <activity android:name=".features.productivity.TestActivity">

    </activity>
  </application>

</manifest>